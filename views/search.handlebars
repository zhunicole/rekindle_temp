<div class="container">
	<h4>Search by name, location or milestone:</h4>
	<form role="search">
		<div class="input-group">
			<input type="search" class="form-control" name="q"
			{{#if q}}
				value="{{q}}"
			{{else}}
				placeholder="Search"
			{{/if}}
			>
			<span class="input-group-btn">
				<button class="btn btn-default" type="submit">
					<i class="glyphicon glyphicon-search"></i>
				</button>
			</span>
		</div>
	</form>

	<h4>Results</h4>

	{{#each results}}
		<div class="container">
			{{> card}}
		</div>
	{{/each}}
</div>